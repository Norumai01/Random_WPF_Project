<Window x:Class="Basic_Entry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basic_Entry"
        mc:Ignorable="d"
        Title="Basic Entry" Height="450" Width="550"
        Background="DimGray">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="Name" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="NameTextBox" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="200"/>

            <Label Content="Age" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="AgeTextBox" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="200"/>

            <Button Content="Submit" HorizontalAlignment="Center" Background="LightCyan"  Margin="0,30,0,0" VerticalAlignment="Top" Height="20" Width="75" Click="SaveButton_Click"/>
            <DataGrid x:Name="DataGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Background="LightGray" Margin="0,20,0,0" Height="200" Width="500" AutoGenerateColumns="True"/>
        </StackPanel>
    </Grid>
</Window>
